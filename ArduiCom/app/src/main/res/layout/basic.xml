<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1" >

    <!-- Background Image with low opacity -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.12"
        android:scaleType="centerCrop"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arduinopic1"
        tools:ignore="ContentDescription" />

    <!-- Top App Bar (Header) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_coner2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Basic"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/log_face_foreground"
                tools:ignore="ContentDescription" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content Area -->

    <!-- Bottom Navigation Bar -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="ExtraText">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con1"
                android:layout_width="117dp"
                android:layout_height="120dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_coner3"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="113dp"
                android:layout_height="112dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/breadboard2" />

            <TextView
                android:id="@+id/lab1"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_below="@id/con1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="18dp"
                android:text="Breadboard"
                android:gravity="center"
                android:textColor="@color/green8"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con2"
                android:layout_width="117dp"
                android:layout_height="120dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/con1"
                android:background="@drawable/round_coner3" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:layout_toRightOf="@+id/con1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/jumperwires" />

            <TextView
                android:id="@+id/lab2"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_below="@id/con1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/con1"
                android:text="Jumper wires"
                android:textAlignment="center"
                android:textColor="@color/green8"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con3"
                android:layout_width="117dp"
                android:layout_height="120dp"
                android:layout_below="@id/lab1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_coner3"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="104dp"
                android:layout_height="93dp"
                android:layout_below="@id/lab1"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/ledbg" />
            <TextView
                android:id="@+id/lab3"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_below="@id/con3"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="18dp"
                android:text="LED"
                android:textColor="@color/green8"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/conm"
                android:layout_width="117dp"
                android:layout_height="120dp"
                android:layout_below="@id/lab2"
                android:layout_toRightOf="@+id/con3"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_coner3"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imageViewm"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:layout_below="@id/con2"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="63dp"
                android:layout_toRightOf="@+id/con3"
                android:src="@drawable/rgbled" />

            <TextView
                android:id="@+id/labm"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/con3"
                android:layout_below="@id/conm"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="18dp"
                android:text="RGB LED"
                android:textColor="@color/green8"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con4"
                android:layout_width="117dp"
                android:layout_height="120dp"
                android:layout_below="@id/lab3"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_coner3"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="105dp"
                android:layout_height="101dp"
                android:layout_below="@+id/lab3"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/resistorbg" />
            <TextView
                android:id="@+id/lab4"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_below="@id/con4"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="84dp"
                android:text="Resistor"
                android:textColor="@color/green8"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar3"
        android:layout_width="411dp"
        android:layout_height="18dp"
        android:background="@color/green7"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_coner_color_green7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Navigation Icons -->
        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/componentbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/projbg2"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tinkercadbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chartbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_5"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/buycomponentsbg1"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
