<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_coner2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/community"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/log_face_foreground"
                tools:ignore="ContentDescription" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Background Image with low opacity -->

    <!-- Top App Bar (Header) -->

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.12"
        android:rotation="90"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/arduinopic1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/Back_icon"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:src="@drawable/back_foreground"
        tools:ignore="ContentDescription" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- "Arduino Open-Source Community" Logo -->
            <TextView
                android:id="@+id/app1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart 1"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/green6" />
            <!-- "Arduino" section title -->
            <ImageView
                android:id="@+id/materialToolbar7"
                android:layout_width="wrap_content"
                android:layout_height="295dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/ch1" />

            <TextView
                android:id="@+id/app2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart 2"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/green6" />
            <!-- "Arduino" section title -->
            <ImageView
                android:id="@+id/materialToolbar8"
                android:layout_width="wrap_content"
                android:layout_height="295dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/ch2" />

            <TextView
                android:id="@+id/app3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart 3"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/green6" />
            <!-- "Arduino" section title -->
            <ImageView
                android:id="@+id/materialToolbar6"
                android:layout_width="wrap_content"
                android:layout_height="295dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/ch3" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar3"
        android:layout_width="411dp"
        android:layout_height="18dp"
        android:background="@color/green7"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_coner_color_green7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Navigation Icons -->
        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/componentbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/projbg2"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tinkercadbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chartbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_5"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/buycomponentsbg1"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>