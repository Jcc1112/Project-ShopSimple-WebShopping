<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1" >

    <!-- Background Image with low opacity -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.12"
        android:scaleType="centerCrop"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arduinopic1"
        tools:ignore="ContentDescription" />

    <!-- Top App Bar (Header) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_coner2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TinkerCAD"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/log_face_foreground"
                tools:ignore="ContentDescription" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content Area -->

    <!-- Bottom Navigation Bar -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con1"
                android:layout_width="160dp"
                android:layout_height="207dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_coner5"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="192dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/project1bg" />

            <TextView
                android:id="@+id/lab1"
                android:layout_width="170dp"
                android:layout_height="53dp"
                android:layout_below="@id/con1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="-15dp"
                android:text="Binking LED"
                android:textColor="@color/green8"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con2"
                android:layout_width="160dp"
                android:layout_height="207dp"
                android:layout_marginRight="-50dp"
                android:layout_toRightOf="@+id/con1"
                android:background="@drawable/round_coner5" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="178dp"
                android:layout_marginRight="-45dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/con1"
                android:src="@drawable/patternledbg" />

            <TextView
                android:id="@+id/lab2"
                android:layout_width="170dp"
                android:layout_height="53dp"
                android:layout_below="@id/con1"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="-500dp"
                android:layout_toRightOf="@+id/con1"
                android:text="Pattern LED Blinking"
                android:textAlignment="center"
                android:textColor="@color/green8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con3"
                android:layout_width="160dp"
                android:layout_height="207dp"
                android:layout_below="@id/lab1"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_coner5"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="193dp"
                android:layout_below="@id/lab1"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/project3" />
            <TextView
                android:id="@+id/lab3"
                android:layout_width="170dp"
                android:layout_height="53dp"
                android:layout_below="@id/con3"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="-45dp"
                android:text="RGB LED"
                android:textColor="@color/green8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/conm"
                android:layout_width="160dp"
                android:layout_height="207dp"
                android:layout_below="@id/lab2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="-50dp"
                android:layout_toRightOf="@+id/con3"
                android:background="@drawable/round_coner5"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageViewm"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_below="@id/con2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="-45dp"
                android:layout_toRightOf="@+id/con3"
                android:src="@drawable/project4" />

            <TextView
                android:id="@+id/labm"
                android:layout_width="162dp"
                android:layout_height="56dp"
                android:layout_below="@id/conm"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="-500dp"
                android:layout_toRightOf="@+id/con3"
                android:text="LCD DISPLAY 16x2 (I2C)"
                android:textAlignment="center"
                android:textColor="@color/green8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con4"
                android:layout_width="160dp"
                android:layout_height="207dp"
                android:layout_below="@id/lab3"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_coner5"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_below="@+id/lab3"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/project5" />

            <TextView
                android:id="@+id/lab4"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/con4"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="3dp"
                android:text="Temperature sensor"
                android:textAlignment="center"
                android:textColor="@color/green8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con5"
                android:layout_width="160dp"
                android:layout_height="207dp"
                android:layout_below="@id/labm"
                android:layout_toRightOf="@+id/con4"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="-50dp"
                android:background="@drawable/round_coner5"
                android:textSize="30dp"
                />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="193dp"

                android:layout_toRightOf="@+id/con1"
                android:layout_below="@+id/labm"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="-15dp"
                android:src="@drawable/project6" />
            <TextView
                android:id="@+id/lab5"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/con4"
                android:layout_below="@id/con5"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="-500dp"
                android:text="8-Segment Display"
                android:textColor="@color/green8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar3"
        android:layout_width="411dp"
        android:layout_height="18dp"
        android:background="@color/green7"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_coner_color_green7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Navigation Icons -->
        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/componentbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/projbg2"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tinkercadbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chartbg1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_icon_5"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/buycomponentsbg1"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
