<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1" >

    <!-- Background Image with low opacity -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.12"
        android:scaleType="centerCrop"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arduinopic1"
        tools:ignore="ContentDescription" />

    <!-- Top App Bar (Header) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_coner2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/Back_icon"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:src="@drawable/back_foreground"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/community"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/log_face_foreground"
                tools:ignore="ContentDescription" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/con1"
                android:layout_width="170dp"
                android:layout_height="210dp"
                android:layout_below="@id/app_bar_layout"
                android:layout_marginTop="10dp"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="-75dp"
                android:background="@drawable/round_coner3"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="194dp"
                android:layout_height="231dp"
                android:layout_below="@id/app_bar_layout"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginLeft="-88dp"
                android:layout_marginTop="-218dp"
                android:src="@drawable/breadboard2" />

            <TextView
                android:id="@+id/lab1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="-125dp"
                android:layout_toRightOf="@id/con1"
                android:background="@drawable/round_coner4"
                android:text="BreadBoard"
                android:textAlignment="center"
                android:textColor="@color/green8"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arduino_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="-85dp"
                android:text="Description"
                android:textColor="@color/green6"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/des1"
                android:layout_width="330dp"
                android:layout_height="410dp"
                android:layout_below="@id/lab2"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_conerdes"
                android:text="@string/bb_des"
                android:textAlignment="center"
                android:textColor="@color/green8"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar3"
        android:layout_width="411dp"
        android:layout_height="18dp"
        android:background="@color/green7"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_coner_color_green7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
